<?xml version="1.0" encoding="utf-8"?>
<!-- Main layout for the level selection screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#E8F5E9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Welcome message at the top of the screen -->
    <TextView
        android:id="@+id/textWelcomeHome"
        android:text="Welcome to Magic Square!"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Input field for the user to enter difficulty level (1–9) -->
    <EditText
        android:id="@+id/editLevel"
        android:hint="Enter level (1–9)"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Button that starts the game after entering level -->
    <Button
        android:id="@+id/buttonStartGame"
        android:text="Start Game"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Displays the result of the last completed game (Success or Failed) -->
    <TextView
        android:id="@+id/textResult"
        android:text="Last game result: -"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
